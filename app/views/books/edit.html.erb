<%= render "users/header" %>

<div class="book-edit-body">
	<div class="container">
		<!--notice-->
		<p></p>
		<% if flash[:notice] != nil %>
			<p><%= flash[:notice] %></p>
		<% end %>
		<div class="row">

			<div class="col-lg-6 col-lg-offset-3">
				<h1>Editing Book</h1>
				<%= form_for @book do |f| %>
				<div class="book-edit-field row">
					<label class="book-edit-label">Title</label>
					<%= f.text_field :title, class: "col-lg-12" %>
				</div>
				<div class="book-edit-field row">
					<label class="book-edit-label">Opinion</label>
					<%= f.text_area :body, class: "col-lg-12"%>
				</div>
				<div class="book-edit-actions row">
					<%= f.submit "Update Book",class: "btn btn-primary col-lg-12" %>
				</div>
				<% end %>

				<%= link_to "Show", book_path(@book.id) %>
				<span>|</span>
				<%= link_to "Back", books_path %>
			</div> <!--col-->


			<div class="col-lg-3"></div>
		</div> <!--row-->
	</div> <!--container-->
</div>

<%= render "users/footer" %>