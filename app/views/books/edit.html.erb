<%= render "users/header" %>

<div class="container">
	<div class="row">
		<div class="col-lg-3"></div>


		<div class="col-lg-6">
			<h2>Editing Book</h2>
			<%= form_for @book do |f| %>
				<p class="book-edit-label">Title</p>
				<%= f.text_field :title%>
				<p class="book-edit-label">Opinion</p>
				<%= f.text_area :body%>
				<%= f.submit %>
			<% end %>
			<%= link_to "Show", book_path(@book.id) %>
			<span>|</span>
			<%= link_to "Back", books_path %>
		</div> <!--col-9-->


		<div class="col-lg-3"></div>
	</div> <!--row-->
</div> <!--container-->