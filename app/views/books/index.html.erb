<%= render "users/header" %>

<div class=container>
	<div class=row>
		<%= render "users/info" %>
		<div class="col-lg-9">
		<h1>books</h1>


			<table>
				<thead>
					<tr>
						<th>ID</th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>

				<% @books.each do |f| %>
				<tbody>
					<tr>
						<td><%= f.user_id %></td>
						<td><%= link_to f.title, book_path(f.id) %></td>
						<td><%= f.body %></td>
					</tr>
				</tbody>
				<% end %>


			</table>


		</div><!--col-9-->
	</div><!--row-->
</div>